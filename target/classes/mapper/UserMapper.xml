<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace为映射的地址，也就是只有在这个接口中才能使用下边的内容-->
<mapper namespace="com.wn.dbms.mapper.UserMapper">
    <!-- id 外部为调用的名字 resultType 为和数据库表中映射的类名，parameterType就是传递进来的参数id的类型-->
    <select id="findUserById" resultType="com.wn.dbms.entity.User" parameterType="java.lang.Integer">
        select * from u_user where u_id = #{uId}
    </select>

</mapper>
